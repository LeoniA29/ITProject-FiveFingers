  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=html mocha --recursive --exit --timeout 10000",
    "build": "cd client && npm i && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "server": "node server.js",
    "develop": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix client\"",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run\"",
    "client": "npm start --prefix ./client",
    "dev": "concurrently \"npm run client \" \"npm run server\"",
    "prettier": "prettier --single-quote --no-semi --tab-width 4 --write **/*.js *.js"
  },
